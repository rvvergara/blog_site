<% include ./partials/header %>

<div class="ui container main-content">
    <h1 class="ui huge header">
        Edit <%=post.title%>
    </h1>
    <form action="/posts/<%=post._id%>?_method=PUT" method="POST" class="ui form">
        <div class="field"><input type="text" name="title" id="post_title" placeholder="Update Post Title" value="<%=post.title%>"></div>
        <div class="field"><input type="text" name="image" id="post_image" placeholder="New Image URL" value="<%=post.image%>"></div>
        <div class="field">
            <input type="text" name="summary" id="post_summary" placeholder="Update post summary" value="<%=post.summary%>">
        </div>
        <div class="field"><textarea name="content" id="post_content" cols="50" rows="50" placeholder="Update your thoughts..."><%-post.content%></textarea></div>
        <input type="submit" value="Update Post" class="ui primary button">
        <a href="/posts/<%=post._id%>" class="ui basic green button">Cancel</a>
    </form>    
</div>

<% include ./partials/footer %>
