<% include ../partials/header %>

<div class="ui container main-content">
    <h1 class="ui huge header">
        Comment on <%=post.title%>
    </h1>
    <form action="/posts/<%=post._id%>/comments/<%=comment.id%>?_method=PUT" method="POST" class="ui form">
        <div class="field">Comment by: <strong><%=comment.author.username%></strong></div>
        <div class="field"><textarea name="comment[text]" cols="10" rows="10" placeholder="Write a comment..." class="area-text"><%-comment.text%></textarea></div>
        <input type="submit" value="Update Comment" class="ui basic blue button">
        <a href="/posts/<%=post._id%>" class="ui basic green button">Cancel</a>
    </form>    
</div>

<% include ../partials/footer %>