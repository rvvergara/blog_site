<% include ../partials/header %>

<div class="ui container main-content">
    <h1 class="ui huge header">
        New Post
    </h1>
    <form action="/posts" method="POST" class="ui form">
        <div class="field"><input type="text" name="post[title]" id="post_title" placeholder="Post Title"></div>
        <div class="field"><input type="text" name="post[image]" id="post_image" placeholder="Image URL"></div>
        <div class="field">
            <input type="text" name="post[summary]" id="post_summary" placeholder="Summary of post">
        </div>
        <div class="field"><textarea name="post[content]" class="area-text" cols="50" rows="50" placeholder="Write your thoughts..."></textarea></div>
        <input type="submit" value="Add Post" class="ui basic blue button">
        <a href="/posts" class="ui basic green button">Cancel</a>
    </form>    
</div>

<% include ../partials/footer %>